---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <Header />

    <main class="container mx-auto px-6 py-16">
      <section class="text-center">
        <h1 class="text-4xl font-bold mb-4">Expert ServiceTitan and Microsoft Dynamics 365 Consulting</h1>
        <h2 class="text-xl text-gray-600 mb-8">Simplifying your business with expert automation and implementation.</h2>
        <p class="max-w-2xl mx-auto mb-12">
          Beacon Co. is your trusted <a href="https://www.buildwithbeacon.io/" class="text-blue-700">ServiceTitan Expert</a> and <a href="https://www.buildwithbeacon.io/" class="text-blue-700">Microsoft Dynamics 365 Consultant</a>. We specialize in advanced solutions including ServiceTitan Business Automation and comprehensive ServiceTitan Consultant services designed to enhance productivity, efficiency, and profitability.
        </p>
        <a href="https://www.buildwithbeacon.io/" class="bg-blue-800 text-white px-6 py-2 rounded hover:bg-blue-700">Visit Our Main Site</a>
      </section>

      <section id="services" class="mt-20">
        <h3 class="text-3xl font-bold mb-6">Our Consulting and Automation Services</h3>
        <ul class="list-disc pl-5 space-y-2">
          <li><a href="https://www.buildwithbeacon.io/" class="text-blue-700">ServiceTitan Expert</a> Implementation & Optimization</li>
          <li><a href="https://www.buildwithbeacon.io/" class="text-blue-700">ServiceTitan Consultant</a> Customization & Support</li>
          <li>Advanced ServiceTitan Business Automation Solutions</li>
          <li><a href="https://www.buildwithbeacon.io/" class="text-blue-700">Microsoft Dynamics 365 Consultant</a> Integration & Training</li>
          <li>CRM Audits and Workflow Automation</li>
        </ul>
      </section>

      <section id="contact" class="mt-20 bg-gray-100 p-8 rounded">
        <h3 class="text-3xl font-bold mb-6">Get in Touch</h3>
        <p class="mb-4">Ready to enhance your software systems?</p>
        <a href="mailto:info@buildwithbeacon.io" class="text-blue-700 font-semibold">info@buildwithbeacon.io</a>
      </section>
    </main>

    <Footer />
  </body>
</html>
